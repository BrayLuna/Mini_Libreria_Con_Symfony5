{% extends 'base.html.twig' %}

{% block title %}Biblioteca index
{% endblock %}

{% block body %}
	{{parent()}}

	<div class="card mb-4">
		<div class="card-body">
			<div class="col-md-12">
				<h2 class="pt-3 pb-4 text-center font-bold font-up danger-text">Informacion de los libros</h2>
			</div>
			<!--Table-->
			<table
				class="table table-hover">
				<!--Table head-->
				<thead class="mdb-color darck-3">
					<tr class="text-danger">
						<th>Id</th>
						<th>Titulo</th>
						<th>Autor</th>
						<th>Portada</th>
						<th>Sinopsis</th> 
						<th  colspan="3"><a href="{{ path('RegistrarPosts') }}" class="btn btn-primary  ">Agregar un nuevo libro</a></th>
					</tr>
				</thead> 

				<!--Table head-->
				<!--Table body-->
				<tbody>
					{% for biblioteca in bibliotecas %}

						<tr>
							<td>{{ biblioteca.id }}</td>
							<td>{{ biblioteca.titulo }}</td>
							<td>{{ biblioteca.autor }}</td>
							<td><img class="rounded" src="{{ asset('uploads/portadas/'~biblioteca.portada) }}" width="150px"></td>
							<td>{{ biblioteca.descripcionCorta }}</td>
							<td>
								<a href="{{ path('biblioteca_show', {'id': biblioteca.id}) }}" class="btn btn-primary">Ver </a>

							</td>
							<td>
								<a href="{{ path('RegistrarPosts', {'id': biblioteca.id}) }}" class="btn btn-primary">Editar</a>

							</td>
							<td>

								{{ include('biblioteca/_delete_form.html.twig') }}

							</td>

						</tr>
					{% else %}
						<tr>
							<td colspan="13">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
				<!--Table body-->
			</table>

			<!--Table-->
		</div>
	</div>

{% endblock %}
