{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	-Log in!
{% endblock %}

{% block body %}
	<div class="container h-100">
		<div class="row h-100 justify-content-center align-items-center">
			<div class="col-6 bg-white rounded my-3 p5">
				<h1>
					<br>
				</h1>
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">Haz iniciado sesión como
							{{ app.user.username }},<a href="{{ path('app_logout') }}">cerrar sesion</a>
						</div>
					{% endif %}
					<center>
						<h1 class="h3 mb-3 font-weight-normal">Por favor, inicie sesión en ¡Bacalibro!</h1>
						<img src="{{ asset('img/LogoBacalibro.jpeg') }}" width="350px" alt="Symfony!"/>
					</center>
					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" >
					<label for="inputPassword">Password</label>
					<input type="password" name="password" id="inputPassword" class="form-control" >

					<input
					type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					{#
						Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
						See https://symfony.com/doc/current/security/remember_me.html
																									
					    <div class="checkbox mb-3">
					    <label>
						<input type="checkbox" name="_remember_me"> Remember me
						</label>
						</div>
				    #}
					<br>

					<div class="text-center">
						<button class="text-center btn btn-lg btn-primary" type="submit">¡Iniciar sesión!</button>
                        <a href="{{ path('registro') }}" class="text-center btn btn-lg btn-primary">¡Registrate!</a>

	
					</div>


					<br>
					<h1><br></h1>
				</form>
			</div>
		</div>
	</div>

{% endblock %}
